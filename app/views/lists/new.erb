<h2>Your Trip to <%= @trip.name %>, <%= @trip.location %></h2>

<% unless locals.empty? %>
  <%= message %>
<% end %>
<br>
<h3><strong>Create a List</strong></h3>
<form action="/trips/<%= @trip.id %>/lists" method="post">
  <label for="title">Title: </label>
  <input type="text" class="form-control" name="title" placeholder="title">
  <br>
  <label for="content">Content: </label>
  <br>
  <textarea name="content" class="form-control" rows="20" cols="100"></textarea>
  <br>
  <input type="submit" class="btn btn-default" value="Create List">
  <button type="button" class="btn btn-default" name="cancel"><a href="/trips/<%= @trip.id %>">Cancel</a></button>
</form>
