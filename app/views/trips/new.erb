<h3>Create a Trip Below:</h3>

<% unless locals.empty? %>
  <%= message %>
<% end %>
<br>
<form action="/trips" method="post">
  <label for="name">Trip Name: </label>
  <input type="text" class="form-control" name="name" placeholder="name">
  <br>
  <label for="location">Trip Location: </label>
  <input type="text" class="form-control" name="location" placeholder="location">
  <br>
  <input type="submit" class="btn btn-default" value="Create Trip">
  <button type="button" class="btn btn-default" name="cancel"><a href="/trips">Cancel</a></button>
</form>
