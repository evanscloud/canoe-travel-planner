<h2>Edit Your Trip</h2>

<% unless locals.empty? %>
  <%= message %>
<% end %>
<br>
<form action="/trips/<%= @trip.id %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">

  <label for="name">Trip Name: </label>
  <input type="text" class="form-control" name="name" value="<% @trip.name %>" placeholder="name">
  <br>
  <label for="location">Trip Location: </label>
  <input type="text" class="form-control" name="location" value="<% @trip.location %>" placeholder="location">
  <br>
  <input type="submit" class="btn btn-default" value="Submit">
  <button type="button" class="btn btn-default" name="cancel"><a href="/trips/<%= @trip.id %>">Cancel</a></button>
</form>
