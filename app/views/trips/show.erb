<h2>Trip Name: <%= @trip.name %></h2>
<h3>Location: <%= @trip.location %></h3>

<% unless locals.empty? %>
  <%= message %>
<% end %>
<br>

<button type="button" class="btn btn-default" name="create_list"><a href="/trips/<%= @trip.id %>/lists/new">Create a New List</a></button>

<ul>
  <% @trip.lists.each do |list| %>
    <li><a href="/trips/<%= list.trip_id %>/lists/<%= list.id %>" style="color: #ffffff"><%= list.title %></a></li>
  <% end %>
</ul>

<form action="/trips/<%= @trip.id %>/delete" method="post">
  <input type="hidden" id="hidden" name="_method" value="delete">
  <button type="button" class="btn btn-default" name="edit_trip"><a href="/trips/<%= @trip.id %>/edit">Edit Trip</a></button>
  <input type="submit" class="btn btn-default" value="Delete Trip">
</form>
