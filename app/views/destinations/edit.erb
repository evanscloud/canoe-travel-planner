<h2>Edit Your Destination</h2>

<% unless locals.empty? %>
  <%= message %>
<% end %>
<br><br>
<form action="/destinations/<%= @destination.id %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">

  <label for="name">Destination Name: </label>
  <input type="text" name="name" value="<% @destination.name %>" placeholder="name">
  <br><br>
  <label for="location">Destination Location: </label>
  <input type="text" name="location" value="<% @destination.location %>" placeholder="location">
  <br><br>
  <input type="submit" value="Submit">
</form>
